/* 
* Program counts sum of row
* s=s(1)+â€¦+s(n), 
* where
* s(n)=(-1)^n * x^(2n-1) / (2n+1) 
* up to eps=0.001, with parameters 'x' & 'eps' .
* */

#include <stdio.h>
#include <math.h>
#include <conio.h>

float summ(float k, int n) {
    float s;
    s = pow(-1, n)*pow(k, 2*n-1)/(2*n+1);
    return s;
}

int main() {
    float x, s = 0, eps = 0.001;
    int i = 1;
    printf ("Enter x: ");
    scanf ("%f",&x);

    do {
        s = s + summ(x, i);
        i++;
    } while (summ(x, i) < eps);

    printf ("\n s=%.3f ", s);
    getch();

    return 0;
}
